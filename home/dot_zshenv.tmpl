#!/usr/bin/env zsh

export XDG_CONFIG_HOME="$HOME/.config"
export XDG_CACHE_HOME="$HOME/.cache"
export XDG_DATA_HOME="$HOME/.local/share"
export HOMEBREW_PREFIX="/opt/homebrew/bin/brew"

export ZDOTDIR="$XDG_CONFIG_HOME/zsh"
export ZSH_CACHE_DIR="$XDG_CACHE_HOME/zsh"

export EDITOR="nvim"

export GOPATH="$HOME/.go"
export PATH=$PATH:$GOPATH/bin/

export PNPM_HOME="$HOME/.pnpm"

export CARGO_HOME="$HOME/.cargo"
export PATH="$PATH:$CARGO_HOME/bin"

export PATH="$HOME/.local/bin:$PATH"

# powershell
export PATH="$PATH:/usr/local/microsoft/powershell/7"

# Add .NET Core SDK tools
export PATH="$PATH:$HOME/.dotnet/tools"

# scripts
export PATH="$PATH":"$HOME/.local/scripts/"

export FZF_DEFAULT_OPTS="
	--color=fg:#908caa,bg:-1,hl:#ebbcba
	--color=fg+:#e0def4,bg+:#6e6a86,hl+:#ebbcba
	--color=border:#403d52,header:#31748f,gutter:#44415a
	--color=spinner:#f6c177,info:#9ccfd8
	--color=pointer:#c4a7e7,marker:#eb6f92,prompt:#908caa"

export BUN_INSTALL="$HOME/.bun"
export PATH="$BUN_INSTALL/bin:$PATH"
